@model AplicacionWebSeguros.Models.tbPoliza

@{
    ViewBag.Title = "Eliminar Poliza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Poliza</h2>

<h3>Está seguro de eliminar esta poliza ?</h3>
<div>
    @Html.ActionLink("Volver a la lista", "ListaPolizas", "Poliza", new { area = "" }, new { @class = "btn btn-success" })
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Poliza Id

        <dd>
            @Html.DisplayFor(model => model.PolizaId)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descriocion)
        </dd>
                
        <dt>
            Tipo de cubrimiento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoCubrimientoDesc)
        </dd>

        <dt>
            Cubrimiento (%)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cubrimiento)
        </dd>

        <dt>
            Fecha Inicio vigencia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InicioVigencia)
        </dd>

        <dt>
            Periodo cobertura (meses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PeriodoCobertura)
        </dd>

        <dt>
            Precio ($)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            Tipo de riesgo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoRiesgoDesc)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Eliminar Poliza" class="btn btn-danger" /> 
        </div>
    }
</div>
