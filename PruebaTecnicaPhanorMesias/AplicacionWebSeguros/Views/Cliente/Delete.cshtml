@model AplicacionWebSeguros.Models.tbCliente

@{
    ViewBag.Title = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Cliente</h2>

<h3>Está seguro de eliminar este cliente ?</h3>
<div>
    @Html.ActionLink("Volver a la lista", "ListaPolizas", "Poliza", new { area = "" }, new { @class = "btn btn-success" })
</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cliente Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClienteId)
        </dd>

        <dt>
            Nombre completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <dt>
            Nro. Documento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Documento)
        </dd>

        <dt>
           Tipo documento Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoDoc)
        </dd>

        <dt>
            Tipo de documento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoDocDesc)
        </dd>

        <dt>
            Dirección
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccrion)
        </dd>

        <dt>
            Teléfono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        </div>
    }
</div>
